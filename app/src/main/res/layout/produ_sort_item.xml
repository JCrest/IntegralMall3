<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">


        <ImageView
            android:id="@+id/iv_pro_sort_title"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:src="@drawable/home_one_top"
            tools:background="@drawable/home_one_top" />

        <LinearLayout
            android:id="@+id/ll_sort_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_sort_head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="20sp"
                tools:text="1积分抽大奖" />

            <TextView
                android:id="@+id/tv_sort_head_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="14sp"
                tools:text="1积分拼运气 人气爆品等你拿" />

            <ImageView
                android:id="@+id/iv_sort_head_image"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                tools:background="@drawable/home_one_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_sort_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sort_left_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    tools:text="生日特权" />

                <TextView
                    android:id="@+id/tv_sort_left_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    tools:text="限量专属优惠" />

                <ImageView
                    android:id="@+id/iv_sort_left_image"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    tools:background="@drawable/home_one_left" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sort_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sort_center_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    tools:text="享大牌" />

                <TextView
                    android:id="@+id/tv_sort_center_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    tools:text="潮人潮品低至一折" />

                <ImageView
                    android:id="@+id/iv_sort_center_image"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    tools:background="@drawable/home_one_center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sort_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sort_right_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    tools:text="电影票" />

                <TextView
                    android:id="@+id/tv_sort_right_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    tools:text="9积分看大片" />

                <ImageView
                    android:id="@+id/iv_sort_right_image"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    tools:background="@drawable/home_one_right" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>