<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_it19</item>
        <item name="colorPrimaryDark">@color/title_it19</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/myAppTitle</item>
    </style>

    <style name="MyAppThemeTwo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/myAppTitle</item>
        <item name="android:windowEnterAnimation">@anim/activity_explode</item>
        <item name="android:windowExitAnimation">@anim/activity_explode</item>
    </style>

    <style name="CustomDatePickerDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
